<?xml version='1.0' encoding='utf-8'?>
<widget id="com.chaosscape.mtgsimplescore" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MtG SimpleScore</name>
    <description>Magic: The Gathering score keeping app</description>
    <author email="chrisbroski@gmail.com" href="http://chaosscape.com/">Chris Broski</author>

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="orientation" value="portrait" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
